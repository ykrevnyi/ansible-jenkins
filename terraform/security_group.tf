resource "aws_security_group" "jenkins-ssh" {
  name = "jenkins-ssh"
  description = "Allow all traffic for Jenkins CI"

  ingress {
      from_port = 22
      to_port = 22
      protocol = "TCP"
      cidr_blocks = ["0.0.0.0/0"]
  }

  egress {
      from_port = 0
      to_port = 0
      protocol = "-1"
      cidr_blocks = ["0.0.0.0/0"]
  }
}
